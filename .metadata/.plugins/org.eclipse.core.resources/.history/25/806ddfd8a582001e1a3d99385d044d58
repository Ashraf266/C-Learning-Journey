#include "gradebook.h"
#include <iostream>
#include <string>

GradeBook::GradeBook_v3(string name)
{
	setCourseName(name);
}

void GradeBook::setCourseName(string name)
{
	courseName = name;
}

string GradeBook::getCourseName()
{
	return courseName;
}

void GradeBook::displayMessage()
{
	cout << "Welcome to the Grade Book for " << courseName << "!" << endl;
}
